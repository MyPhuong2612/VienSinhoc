@model IEnumerable<WebDoAnVienSinhHoc.Models.spSanPhamDaDat_Result>

@{
    ViewBag.Title = "SanPhamDaDat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sản phẩm đã đặt</h2>

<table class="table">
    <tr>
        <th>
            Mã hóa đơn
        </th>
        <th>
            Ngày lập
        </th>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaHD)
        </td>
        <td>
            @Convert.ToDateTime(item.NgayLap).ToString("dd/MM/yyyy")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenKhoaHoc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuong)
        </td>
        <td>
            @string.Format("{0:#,0}", @item.GiaBan) VND
        </td>
        <td></td>
    </tr>
}

</table>
