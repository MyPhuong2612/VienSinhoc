
@{
    ViewBag.Title = "CapNhatMatKhau";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" template="IE=edge">
    <meta name="viewport" template="width=device-width, initial-scale=1">
    <meta name="description" template="">
    <meta name="author" template="">
    <title>Cập nhật mật khẩu - Khách hàng</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/template/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/template/css/bootstrap.min.css" rel="stylesheet">
    <!-- MetisMenu CSS -->
    <link href="~/template/css/metisMenu.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/template/css/startmin.css" rel="stylesheet">
    <!-- Custom Fonts -->
    <link href="~/template/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
