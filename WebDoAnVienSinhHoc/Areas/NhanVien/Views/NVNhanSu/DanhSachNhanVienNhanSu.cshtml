@model IEnumerable<WebDoAnVienSinhHoc.Models.viewThongTinNhanVien>

@{
    ViewBag.Title = "DanhSachNhanVienNghienCuu";
    Layout = "~/Areas/NhanVien/Views/Shared/_LayoutNhanVien.cshtml";
}
<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
        align-content: center
    }
</style>
<h2>Danh sách Nhân viên</h2>

<table class="table">
    <tr>
        <th>
            Mã NV
        </th>
        <th>
            Họ Tên
        </th>
        <th>
            Ngày sinh
        </th>
        <th>
            Giới tính
        </th>
        <th>
            Lương
        </th>
        <th>
            SĐT
        </th>
        <th>
            Email
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Chức vụ
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaNV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Convert.ToDateTime(item.NgaySinh).ToString("dd/MM/yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioiTinh)
            </td>
            <td>
                @string.Format("{0:#,0}", @item.Luong) VND
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td style='width:20%'>
                @Html.DisplayFor(modelItem => item.DiaChi), @Html.DisplayFor(modelItem => item.TenXa), @Html.DisplayFor(modelItem => item.TenHuyen), @Html.DisplayFor(modelItem => item.TenTinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenChucVu)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaNV }) |
                @Html.ActionLink("Chi tiết", "ChiTietNV", new { id = item.MaNV }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaNV })
            </td>
        </tr>
    }

</table>
